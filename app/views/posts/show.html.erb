<% content_for :page_title, @post.title %>


<section class="section">
	<div class="container">

		<div class="content">
			<p style="font-size:20px"><%= simple_format sanitize(Rinku.auto_link(@post.content)) %></p>
		</div>
			
		<hr />
		<nav class="level">
		<% if current_user == @post.user %>
		<div class="level-left">
				<p class="level-item">
				<strong>Acciones</strong>
			</p>
		</div>
		<div class="level-right">
			<p class="level-item">
				<%= link_to "Editar", edit_post_path(@post), class: "button" %>
			</p>
			<p class="level-item">
			 	<%= link_to "Eliminar", post_path(@post), method: :delete, data: { confirm: "Are you sure? " }, class: "button is-danger" %>
			</p>
		</div>
		<% end %>
		</nav>
	</div>
</section>
<section class="section comments">
	<div class="container">
	<h2 class="subtitle is-5">
				  <% if @post.comments.count > 1 %>
				  <strong><%= @post.comments.count %></strong><strong> Comentarios:</strong>
				  <% end %>
				  <% if @post.comments.count == 1 %>
				  <strong><%= @post.comments.count %></strong><strong> Comentario:</strong>
				  <% end %>
		</h2>
		<%= render @post.comments %>
		<div class="comment-form">
			<hr />
			<h4 class="subtitle is-3">Deja tu comentario</h4>
			<%= render 'comments/form' %>
		</div>
	</div>
</section>